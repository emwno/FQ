<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/dark</item>
        <item name="colorPrimaryDark">@color/dark</item>
        <item name="colorAccent">@color/light</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:windowFullscreen">true</item>
        <item name="bottomSheetDialogTheme">@style/DialogTheme</item>
    </style>

    <style name="DialogTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowSoftInputMode">adjustUnspecified</item>
    </style>

</resources>
